            <Font name="System Bold" size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="txtDescription" layoutX="143.0" layoutY="49.0" prefHeight="30.0" prefWidth="354.0" promptText="Description">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="txtQtyOnHand" layoutX="510.0" layoutY="49.0" prefHeight="25.0" prefWidth="122.0" promptText="QTY On Hand">
