            <Font name="System Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <TextField fx:id="txtCode" layoutX="11.0" layoutY="49.0" prefHeight="25.0" prefWidth="122.0" promptText="Item Code">
