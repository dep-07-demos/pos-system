          <TableColumn fx:id="colCode" prefWidth="75.0" text="Code" />
          <TableColumn fx:id="colDescription" prefWidth="289.0" text="Desription" />
            <TableColumn fx:id="colQtyOnHand" prefWidth="128.0" text="QTY On Hand" />
